@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4" style="padding-top: 3rem">Welcome</h1>
    <div class="container-fluid" style="padding-top: 1.5rem; font-size: 2rem">
        Explore the resources you deserve! Schedule a call with Bram Groen for the full power of a certified national realtor!
       
    </div>

    <div class="container-fluid" style="padding-top: 2rem">
        <a href="#" class="btn btn-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#calendlyModal" role="button">
            <i class="bi bi-phone"></i>
            Schedule Now
        </a>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="calendlyModal" tabindex="-1" aria-labelledby="calendlyModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="calendlyModalLabel">Schedule a Call with Bram Groen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="height:80vh;">
        <iframe src="https://calendly.com/bram_groen/30-minute-meeting"
                width="100%" height="80vh" style="border:0; min-height:400px;" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>
